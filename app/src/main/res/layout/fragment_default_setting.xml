<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.DefaultSettingFragment"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent">

        <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="그룹이름 입력"
                android:inputType="textNoSuggestions"
                android:paddingStart="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium">
            <requestFocus/>
        </EditText>

        <ImageView
                android:id="@+id/iv_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="5dp"
                android:src="@drawable/ic_clear_gray_24dp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/iv_group_image"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add_photo"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/ll_title"/>

    <EditText
            android:padding="10dp"
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="top"
            android:background="@null"
            android:hint="그룹 설명을 입력하세요."
            android:divider="@null"
            app:layout_constraintTop_toBottomOf="@id/iv_group_image"/>

    <RadioGroup
            android:id="@+id/rg_jointype"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="가입방식">

        </TextView>

        <RadioButton
                android:layout_weight="2"
                android:text="자동 승인"
                android:id="@+id/rb_auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <RadioButton
                android:layout_weight="2"
                android:text="승인 확인"
                android:id="@+id/rb_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>